<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Bucket List{% endblock %}</title>

    {# notre google font #}
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Asul:wght@400;700&display=swap" >

    {# lien bootStraps #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    {# lien vers le css #}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">

    {# lien vers le favicon #}
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
</head>
<body>
    <header>
        <div class="container">
            <div class="row ">
                <h1>
                    <a href="{{ path('main_home') }}">
                        <img src="{{ asset('img/logo.svg') }}" alt="Bucket-List"> Bucket-List
                    </a>
                </h1>
            <div class="row align-items-center">
               <div class="col">
                   <a href="{{ path('main_home') }}" title="Go_Home">Home</a>
               </div>
               <div class="col">
                   <a href="{{ path('main_about_us') }}" title="About Us">About Us</a>
               </div>
            </div>

            </div>
        </div>

    </header>
    <main>
        {% block body %}
        {% endblock %}
    </main>
    <footer>
        <div class="container">
            <div class="row col-12 text-center ">
                <div class="fixed-bottom">
                    <p>&copy; Bucket-List {{ "now"| date("Y") }}</p>
                </div>

            </div>
        </div>

    </footer>
</body>
</html>