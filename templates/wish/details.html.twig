{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12  text-center">
                <h2>{{ wish.title }}  || {{ wish.category.name }}</h2>
                <p>Created by {{ wish.author }} on {{ wish.dateCreated | date('d-m-Y') }}</p>
                <p>{{ wish.description }}</p>
            </div>
        </div>
    </div>

{% endblock %}

{% block title %}
    {{ parent() }} |{{ wish.title }}
{% endblock %}

